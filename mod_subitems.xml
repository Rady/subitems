<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="2.5"
    client="site"
    method="upgrade">
        <name>Sub Items</name> 
        <author>Rady Huang</author> 
        <creationDate>24 Sep 2011</creationDate> 
        <license>GPL 2.0</license> 
        <authorEmail>hycn119@gmail.com</authorEmail> 
        <authorUrl>www.radys.cn</authorUrl> 
        <version>1.2</version> 
        <description>Sub Item Module.</description> 

        <files folder="site">
            <filename module="mod_subitems">mod_subitems.php</filename>                
            <filename>index.html</filename>
            <filename>helper.php</filename>
            <folder>tmpl</folder>
            <folder>language</folder>
        </files>

        <languages>
            <language tag="en-GB">language/en-GB/en-GB.mod_subitems.ini</language>
            <language tag="en-GB">language/en-GB/en-GB.mod_subitems.sys.ini</language>
        </languages>

    <config>
     <fields name="params">
         <fieldset name="basic">
            <field name="parentid" type="text" default="" label="LABEL PARENT ID" description="DESC PARENT ID" />
            <field name="showparent" type="radio" default="0" label="LABEL SHOW PARENT" description="DECS SHOW PARENT">
                 <option value="0">No</option>
                 <option value="1">Yes</option>
            </field>                   
            <field name="excludeids" type="text" default="" label="LABEL EXPLUDE IDS" description="DESC EXPLUDE" />                                             <field name="showchild" type="radio" default="0" label="LABEL SHOW CHILD" description="DECS SHOW CHILD">
                 <option value="0">No</option>
                 <option value="1">Yes</option>
            </field>
            <field name="excludechildids" type="text" default="" label="LABEL EXPLUDE CHILD IDS" description="LABEL EXPLUDE CHILD IDS" />
            <field name="showthirdlevel" type="radio" default="0" label="LABEL THIRD LEVEL" description="DECS THIRD LEVEL">
                 <option value="0">No</option>
                 <option value="1">Yes</option>
            </field>
            <field name="class_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />              
         </fieldset>


            <fieldset name="advanced">

                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

                <field
                    name="cache"
                    type="list"
                    default="1"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                        value="1">JGLOBAL_USE_GLOBAL</option>
                    <option
                        value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field
                    name="cache_time"
                    type="text"
                    default="900"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
                <field
                    name="cachemode"
                    type="hidden"
                    default="itemid">
                    <option
                        value="itemid"></option>
                </field>
            </fieldset>
     </fields>
     </config>     
		
</extension>
